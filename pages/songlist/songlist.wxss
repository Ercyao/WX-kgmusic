/* pages/songlist/songlist.wxss */
.songlist-wrapper .songlist-header{
  position: relative;
  z-index: 2;
  width:100%;
  height:400rpx;
  box-shadow:0 10rpx 15rpx rgba(90, 150, 160, 0.6);
}
.header-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  background:#fff;
  opacity: 0.6;
}
.header-txt{
  position: relative;
  z-index: 2;
}
.header-txt .title{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
  color:#fb483a;
}
.header-txt .time{
  color: #888;
  padding:0 3%;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: space-between;
}
.header-txt .time .last{
  width: 335rpx;
  overflow: hidden;
}
.header-txt .intro{
  padding: 30rpx 3% 0;
  height: 240rpx;
  overflow: hidden;
  color:#333;
  text-indent: 2em;
}
.header-icon{
  position: absolute;
  bottom: -45rpx;
  right: 10rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background:#fff;
  box-shadow:0 10rpx 6rpx rgba(90, 150, 160, 0.9);
  animation: headicon 1s linear;
  -webkit-animation: headicon 1s linear;
}
@keyframes headicon{0%{bottom:-45rpx;}25%{bottom:70rpx;}50%{bottom:-70rpx;} 75%{bottom:0rpx;} 100%{bottom:-45rpx;}}
@-webkit-keyframes headicon{0%{bottom:-45rpx;}25%{bottom:70rpx;}50%{bottom:-70rpx;} 75%{bottom:0rpx;} 100%{bottom:-45rpx;}}


.songlist-box{
  margin: 3%;
}
.songlist-box .item{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #678e95;
  display: flex;
  justify-content: space-between;
}
.index{
  width:50rpx;
  height:50rpx;
  line-height:50rpx;
  border-radius:50%;
  background:#678e95;
  box-shadow:2rpx 6rpx 12rpx rgba(0, 0, 0, 0.5);
  text-align:center;
  margin: 15rpx 0;
}
.name{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.songlist-wrapper .song{
  width: 75%;
}